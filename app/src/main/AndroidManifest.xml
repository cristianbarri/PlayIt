<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playit.playit" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/playit_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFC"
            android:label="@string/title_activity_nfc" >
        </activity>
        <activity
            android:name=".ProfileSwipe"
            android:label="@string/title_activity_profile_swipe" >
        </activity>
        <activity
            android:name=".SesionSwipe"
            android:label="@string/title_activity_sesion_swipe" >
        </activity>
    </application>

</manifest>
